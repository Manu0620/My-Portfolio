---
import Button from "./button.astro";
import Dot from "./dot.astro";
---

<header class="header">
    <div class="logo">
        <h1>Manuel's Bio<Dot /></h1>
    </div>
    <nav class="nav">
        <ul>
            <li>
                <a href="#">About</a>
            </li>
            <li>
                <a href="#">Projects</a>
            </li>
            <li>
                <a href="#">Contact</a>
            </li>
            <Button text="Download CV" />
        </ul>
    </nav>
</header>

<style>
    .header {
        backdrop-filter: blur(20px);
        background-color: #bbdefb;
        color: #0d47a1;
        border-bottom: 2px solid #0d47a1;
        display: flex;
        justify-content: space-between;
        align-items: center;
        min-width: 100%;
        height: 40px;
        position: fixed;
        padding: 20px;
    }

    .logo h1 {
        margin-left: 2rem;
    }

    .nav ul {
        display: flex;
        align-items: center;
        margin-right: 4rem;
    }

    .nav ul li {
        list-style: none;
        border: 2px solid transparent;
        padding: 10px 20px;
        margin-right: 0.5rem;
    }

    .nav ul li:hover {
        border: 2px solid #0d47a1;
        border-radius: 50px;
    }

    .nav ul li a {
        text-decoration: none;
        color: #0d47a1;
        font-size: 16px;
    }

    @media only screen and (max-width: 768px) {
        .logo h1 {
            font-size: 24px;
            margin-left: 1rem;
        }
        .nav ul {
            display: flex;
            align-items: center;
            margin-right: 2rem;
        }
        .nav ul li a {
            font-size: 14px;
        }
        .nav ul button {
            font-size: 14px;
        }
    }
</style>
